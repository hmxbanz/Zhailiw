<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/appBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.MeActivity">
    <include layout="@layout/layout_title_top" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/layout_avator"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white" >

        <TextView
            android:layout_marginLeft="10dp"
            style="@style/AppTitleStyle"
            android:gravity="center_vertical"
            android:text="用户头像"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <com.zhailiw.app.widget.SelectableRoundedImageView
            android:id="@+id/img_avator"
            android:src="@drawable/app_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="14sp"
            android:scaleType="centerCrop"
            app:sriv_left_bottom_corner_radius="50dip"
            app:sriv_left_top_corner_radius="50dip"
            app:sriv_right_bottom_corner_radius="50dip"
            app:sriv_right_top_corner_radius="50dip"
            app:sriv_border_width="2dip"
            app:sriv_border_color="@color/white"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/layout_nickname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_line2"
        android:gravity="center_vertical"      >

        <TextView
            style="@style/AppTitleStyle"
            android:gravity="center_vertical"
            android:text="用户昵称"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txt_nickname"
            android:gravity="center_vertical"
            android:text=""
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_birthday"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_line2"
        android:gravity="center_vertical" >
        <TextView
            style="@style/AppTitleStyle"
            android:gravity="center_vertical"
            android:text="出生日期"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txt_birthday"
            android:gravity="center_vertical"
            android:text=""
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>