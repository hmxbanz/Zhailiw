<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/appBg"
    tools:context="com.zhailiw.app.view.activity.LoginActivity">
    <include layout="@layout/layout_title_top" />
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="2dp">

            <EditText
                android:textSize="16dp"
                android:id="@+id/username"
                android:padding="5dp"
                android:hint="请输入手机号"
                android:inputType="number"
                android:background="@drawable/transparent_drawable"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
        </RelativeLayout>
        <View
            android:background="@color/grayLine"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="2dp">

            <EditText
                android:textSize="16dp"
                android:id="@+id/password"
                android:padding="5dp"
                android:hint="请输入密码"
                android:inputType="number"
                android:background="@drawable/transparent_drawable"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
        </RelativeLayout>
        <View
            android:background="@color/grayLine"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="2dp">

            <EditText
                android:textSize="16dp"
                android:id="@+id/captcha"
                android:padding="5dp"
                android:hint="请输入验证码"
                android:inputType="number"
                android:background="@drawable/transparent_drawable"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
            <TextView
                android:id="@+id/txt_captcha"
                android:text="获取验证码"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:background="@drawable/transparent_drawable"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_find_pwd"
            android:text="@string/find_password"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            style="@style/AppButtonStyle"
            android:background="@drawable/bg_button"
            />

        <LinearLayout
            android:visibility="invisible"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:background="@drawable/bg_line_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/appTextColor"
                style="@style/AppTitleStyle"
                android:background="#f2f2f2"
                android:text="@string/other_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/layout_nav"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:id="@+id/layout_register"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:padding="5dp"
                        android:id="@+id/nav_img_new"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/icon_qq"
                        />
                    <TextView
                        android:layout_below="@+id/nav_img_new"
                        android:gravity="center"
                        android:text="QQ登录"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:padding="5dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/nav_img_hot"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_wx"
                        />
                    <TextView
                        android:gravity="center"
                        android:layout_below="@+id/nav_img_hot"
                        android:text="微信登录"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:padding="5dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/nav_img_hot3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_wb"
                        />
                    <TextView
                        android:gravity="center"
                        android:layout_below="@+id/nav_img_hot3"
                        android:text="微博登录"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>